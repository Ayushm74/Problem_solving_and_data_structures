class Solution {
public:
    string addBinary(string a, string b) {
        int carry = 0;

        int maxi = max(a.size(), b.size());
        int mini = min(a.size(), b.size());

        reverse(a.begin(), a.end());
        reverse(b.begin(), b.end());

        string ans = "";

        for (int i = 0; i<mini; i++) {

            int sum = (a[i]-'0') + (b[i]-'0') + carry;

            if (sum == 3) {
                ans += '1';
                carry = 1;
            }
            else if (sum == 2) {
                ans += '0';
                carry = 1;
            }
            else if (sum == 1) {
                ans += '1';
                carry = 0;
            }
            else {
                ans += '0';
                carry = 0;
            }
        }

        if (a.size() > b.size()) {
            for (int i = mini; i < maxi; i++) {

                int sum = (a[i] - '0') + carry;

                if (sum == 2) {
                    ans += '0';
                    carry = 1;
                }
                else if (sum == 1) {
                    ans += '1';
                    carry = 0;
                }
                else {
                    ans += '0';
                    carry = 0;
                }
            }
        }

        else if (b.size() > a.size()) {
            for (int i = mini; i < maxi; i++) {

                int sum = (b[i] - '0') + carry;

                if (sum == 2) {
                    ans += '0';
                    carry = 1;
                }
                else if (sum == 1) {
                    ans += '1';
                    carry = 0;
                }
                else {
                    ans += '0';
                    carry = 0;
                }
            }
        }

        if (carry == 1) {
            ans += '1';
        }

        reverse(ans.begin(), ans.end());

        return ans;
    }
};